{
  "name": "Graduaters!",
  "version": "1.0.0",
  "description": "Graduaters! for web",
  "main": "main.js",
  "author": "okayu <studiomikan@gmail.com> (https://studiomikan.net/)",
  "private": true,
  "scripts": {
    "pack": "electron-builder --dir",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "start-win": "electron .",
    "start": "http-server docs -p 8081 -o index.html"
  },
  "build": {
    "appId": "net.studiomikan.ponkan.graduaters",
    "productName": "Graduaters!",
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerSidebar": "build/installerSidebar.bmp",
      "packElevateHelper": false,
      "runAfterFinish": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "menuCategory": false
    },
    "mac": {
      "category": "public.app-category.games"
    }
  },
  "devDependencies": {
    "electron": "^8.2.1",
    "electron-builder": "^22.4.1",
    "http-server": "^0.12.1"
  }
}
