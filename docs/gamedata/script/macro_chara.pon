// キャラ情報取得
// {
//   lay:      レイヤー番号,
//   file:     画像ファイル,
//   x:        x座標,
//   y:        y座標,
//   isFirst:  新規読み込みかどうか,
//   nameText: 名前表示のテキスト,
//   isLoaded: 画像が読み込み済みかどうか,
//   visible:  表示状態
// }
tv.getCharaInfo = function(mp) {
  var lay = mp.name;
  var size = mp.size == null ? "medium" : mp.size;
  var num = mp.num == null ? 1 : mp.num;

  var ponLayer = ponkan.getLayers({lay: lay})[0];
  var chara = tv.charaInfo[mp.name][size][num - 1];
  var pos = tv.positionInfo[size][mp.pos == null ? "center" : mp.pos];
  var file = chara.file;
  var x = pos - (chara.width / 2) + chara.offsetX;
  var y = chara.offsetY;
  var isFirst = ponLayer.image == null || !ponLayer.visible;
  var nameText = tv.nameInfo[mp.name];
  var isLoaded = (ponLayer.x == x) && (file == ponLayer.imageFilePath) && ponLayer.visible;
  return {
    lay: lay,
    file: file,
    x: x,
    y: y,
    isFirst: isFirst,
    nameText: nameText,
    isLoaded: isLoaded,
    visible: ponLayer.visible
  };
}
---

# キャラ読み込み（ギャラリー用）
# @param name キャラクターの名前。asuka or yuuki
# @param size キャラクターのサイズ。medium or large
# @param num キャラクターの立ち絵の番号。1～5
# @param pos キャラクターの位置。left or center or right
;macro name: "load_chara_for_gallery"
  ---
    tv.chara = tv.getCharaInfo(mp);
    tv.lay = tv.cg.lay[mp.name];
  ---
  ;image lay: "&tv.lay", file: "&tv.chara.file", x: "&tv.chara.x", y: "&tv.chara.y", visible: true
;endmacro

# キャラ読み込み
# @param name キャラクターの名前。asuka or yuuki
# @param size キャラクターのサイズ。medium or large
# @param num キャラクターの立ち絵の番号。1～5
# @param pos キャラクターの位置。left or center or right
# @param alpha
;macro name: "load_chara"
  ---
    tv.chara = tv.getCharaInfo(mp);
    tv.alpha = mp.alpha == null ? 1 : 0;
  ---
  ;if exp:"!tv.chara.isLoaded"
    ;image lay: "&tv.chara.lay", file: "&tv.chara.file", x: "&tv.chara.x", y: "&tv.chara.y", visible: true, alpha: "&tv.alpha"
  ;endif
;endmacro

# キャラクターの新規読み込み or 切り替え + 名前表示
# 新規読み込み時は 400ms
# 切り替え時は 200ms
# すでに同じ位置に同じファイルが読み込まれているときは名前表示のみ
# @param name キャラクターの名前。asuka or yuuki
# @param size キャラクターのサイズ。medium or large
# @param num キャラクターの立ち絵の番号。1～5
# @param pos キャラクターの位置。left or center or right
# @param time 表示時間。省略可能。
# @param canskip 省略可能
;macro name: "chara"
  ---
    tv.chara = tv.getCharaInfo(mp);
    tv.time = tv.chara.isFirst ? 400 : 200;
    if (mp.time != null) { tv.time = mp.time; }
    tv.canskip = mp.canskip != null ? mp.canskip : true
  ---
  ;if exp: "!tv.chara.isLoaded"
    ;pretrans
    ;load_chara name: "&mp.name", size: "&mp.size", num: "&mp.num", pos: "&mp.pos"
    ;trans time: "&tv.time"
    ;waittrans canskip: "&tv.canskip"
  ;endif
  ;print_name name: "&tv.chara.nameText"
;endmacro

# キャラクターをスライドしながら表示する。
# 新規表示のみ考慮。入れ替えはできない。
# また、名前は表示しない。
# @param name キャラクターの名前。asuka or yuuki
# @param num キャラクターの立ち絵の番号。1～5
# @param pos キャラクターの位置。left or center or right
# @param time 表示時間。省略可能。
# @param canskip 省略可能
# @param from 登場する方向。left or right
;macro name: "slide_in_chara"
  ---
    tv.chara = tv.getCharaInfo(mp);
    tv.time = mp.time != null ? mp.time : 600;
    tv.canskip = mp.canskip != null ? mp.canskip : true
    tv.from = mp.from != null ? mp.from : "left";
    // load_charaで読み込んだ位置が最終表示地点。
    // その位置へ左右からスライドしてくるようにする。
    tv.toX = tv.chara.x
    tv.toY = tv.chara.y
    tv.fromX = tv.chara.x + (tv.from == "left" ? -70 : 70);
    tv.fromY = tv.chara.y;
    tv.path = [{ x: tv.toX, y: tv.toY, alpha: 1.0 }];
  ---
  # ;pretrans
  # ;load_chara name: "&mp.name", size: "&mp.size", num: "&mp.num", pos: "&mp.pos"
  # ;layopt lay: "&mp.name", x: "&tv.fromX", y: "&tv.fromY", visible: true
  # ;move lay: "&mp.name", time: "&tv.time", ease: "out", path: "&tv.path"
  # ;trans time: "&tv.time",
  # ;waittrans canskip: "&tv.canskip"
  # ;stopmove lay: "&mp.name", canskip: "&tv.canskip"
  ;load_chara name: "&mp.name", size: "&mp.size", num: "&mp.num", pos: "&mp.pos", alpha: 0
  ;layopt lay: "&mp.name", x: "&tv.fromX", y: "&tv.fromY", visible: true, alpha: 0
  ;move lay: "&mp.name", time: "&tv.time", ease: "out", path: "&tv.path"
  ;waitmove lay: "&mp.name", canskip: "&tv.canskip"
;endmacro

# キャラクターをフェードで非表示にする
# @param name キャラクターの名前。asuka or yuuki
;macro name: "out_chara"
  ;pretrans
  ;layopt lay: "&mp.name", visible: false
  ;trans time: "500"
  ;waittrans
;endmacro

# すべてのキャラクターをフェードで非表示にする
;macro name: "every_out"
  ;pretrans
  ;layopt lay: "asuka, yuuki", visible: false
  ;trans time: "500"
  ;waittrans
;endmacro

# キャラクターをスライドしながら非表示にする。
# @param name キャラクターの名前。asuka or yuuki
# @param time 表示時間。省略可能。
# @param canskip 省略可能
# @param to 退場する方向。left or right
;macro name: "slide_out_chara"
  ---
    var ponLayer = ponkan.getLayers({lay: mp.name})[0];
    tv.time = mp.time != null ? mp.time : 600;
    tv.canskip = mp.canskip != null ? mp.canskip : true
    var to = mp.to != null ? mp.to : "right";
    // 現在位置から左右へスライドしていくようにする。
    var toX = ponLayer.x + (to == "left" ? -70 : 70);
    var toY = ponLayer.y;
    tv.path = [{ x: toX, y: toY, alpha: 0 }];
  ---
  # ;pretrans
  # ;move page: "fore", lay: "&mp.name", time: "&tv.time", ease: "out", path: "&tv.path"
  # ;layopt lay: "&mp.name", visible: false
  # ;trans time: "&tv.time",
  # ;waittrans canskip: "&tv.canskip"
  # ;stopmove lay: "&mp.name", canskip: "&tv.canskip"
  ;move lay: "&mp.name", time: "&tv.time", ease: "out", path: "&tv.path"
  ;waitmove lay: "&mp.name", canskip: "&tv.canskip"
  ;layopt lay: "&mp.name", visible: false, alpha: 1.0
;endmacro

# キャラクターを上下に揺らす
# @param name キャラクターの名前。asuka or yuuki
;macro name: "up_down_chara"
  ---
    var ponLayer = ponkan.getLayers({lay: mp.name})[0];
    tv.path = [
      { x: ponLayer.x, y: ponLayer.y + 40 },
      { x: ponLayer.x, y: ponLayer.y },
    ];
  ---
  ;move lay: "&mp.name", time: "500", ease: "both", path: "&tv.path"
  ;waitmove lay: "&mp.name", canskip: true
;endmacro


