;call label: "redraw_window"
;jump label: "unlockbuttons"

*on_sound_stop
-console.log('on_sound_stop')
---
---
;if exp: "tv.sound.repeat"
  # 次の曲を再生
;elsif exp: "tv.sound.repeatOne"
  # 同じ曲を再生
  ;stopsound buf: "bgm"
  ;free_audio_spectrum
  ;playsound buf: "bgm"
;elsif exp: "tv.sound.shuffle"
  # シャッフル再生
;endif
;jump label: "unlockbuttons"

*play_current_sound
;stopsound buf: "bgm"
;free_audio_spectrum
;loadsound buf: "bgm", "file": "&tv.sound.currentSound.file"
;soundopt  buf: "bgm", volume: 1, loop: false
# ;setsoundstop buf: "bgm", jump: true, label: "on_sound_stop"
;init_audio_spectrum {
  buf: "bgm",
  lay: "&tv.sound.lay.spectrum",
  type: "solid",
  options: {
    fftSize: 128,
    barWidth: 14,
    margin: 1,
  },
}
;layopt lay: "&tv.sound.lay.spectrum", visible: true
;playsound buf: "bgm"
;return

*stop_sound
;stopsound buf: "bgm"
;free_audio_spectrum
;if exp: "tv.sound"
  ;layopt lay: "&tv.sound.lay.spectrum", visible: false
;endif
;return

