-tv.sound.repeatOne = false
;call label: "redraw_window"
;jump label: "unlockbuttons"

*on_click_repeat_one
-tv.sound.repeatOne = !tv.sound.repeatOne
-tv.sound.repeat = false
;call label: "redraw_window"
;jump label: "unlockbuttons"

*on_click_shuffle
