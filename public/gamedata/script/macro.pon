;macro name: "whiteout"
  ;pretrans
  ;freeimage lay: "base"
  ;clearcolor lay: "base"
  ;fillcolor lay: "base", color: "0xFFFFFF", alpha: 1
  ;layopt lay: "all", visible: false
  ;layopt lay: "base", visible: true
  ;trans time: 1500
  ;waittrans canskip: true
  ;stoptrans
;endmacro


