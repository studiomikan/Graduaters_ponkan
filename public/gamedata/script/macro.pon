#-------------------------------------------------------------------
# メッセージレイヤー表示切り替え
#-------------------------------------------------------------------
;macro name: "fadein_meslay"
  ;clear lay: "mes"
  ;clear lay: "speaker"
  ;pretrans
  ;show_meslay
  ;noname
  ;trans time: "200"
  ;waittrans canskip: "false"
;endmacro

;macro name: "fadeout_meslay"
  ;pretrans
  ;hide_meslay
  ;noname
  ;trans time: "200"
  ;waittrans canskip: "false"
;endmacro


